{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/_assets/*"],
      "@context/*": ["./src/_context/*"],
      "@helpers/*": ["./src/_helpers/*"],
      "@services/*": ["./src/_services/*"],
      "@styles/*": ["./src/_styles/*"],
      "@utils/*": ["./src/_utils/*"],
      "@api/*": ["./src/api/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@redux/*": ["./src/redux/*"],
      "@dev/*": ["./src/_devOnly/*"]
    }
  },
  "include": [
    "src"
  ]
}
